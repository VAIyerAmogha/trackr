<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Your Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textTotalHabits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Habits: 0"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textCurrentStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Streak: 0"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textLongestStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longest Streak: 0"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Emoji Badge Text -->
        <TextView
            android:id="@+id/textBadgeEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ…"
            android:textSize="60sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Badge: None"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
